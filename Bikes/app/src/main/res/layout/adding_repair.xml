<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the following information to add a repair."
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:textStyle="bold"
        android:textColor="#ff2e7d13"
        android:layout_gravity="top" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="80dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please enter the serial of the bike." />

        <EditText
            android:id="@+id/addRepairSerial"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please enter the name of the customer." />

        <EditText
            android:id="@+id/addRepairCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text"
            android:layout_marginLeft="3dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the phone number of the customer." />

        <EditText
            android:id="@+id/addRepairCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="phone"
            android:layout_marginLeft="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the email of the customer. (Optional)" />

        <EditText
            android:id="@+id/addRepairEmail"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="3dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please select the due date for the repair"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/addRepairDate"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#CCCCCC"
            android:ems="10"
            android:editable="false"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButtonCalendar"
            android:src="@drawable/adddate"

            />

    </LinearLayout>


    <Button
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addRepairEnterButton"
        android:text="Enter Information"/>


</LinearLayout>

</ScrollView>