<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the following information to add a repair."
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:textStyle="bold"
        android:textColor="#ff2431ff"
        android:layout_gravity="top" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please enter the name of the customer." />

        <EditText
            android:id="@+id/addRepairCustomerName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the phone number of the customer." />

        <EditText
            android:id="@+id/addRepairCustomerPhone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the date" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/addRepairDate"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="#CCCCCC"
            android:ems="10"
            android:editable="true"
            android:layout_gravity="center_horizontal"
            />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButtonCalendar"
            android:src="@drawable/calendar"
            android:scaleType="fitXY"
            android:scaleY="-1"
            android:padding="30dp"

           />

    </LinearLayout>


    <Button
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addRepairEnterButton"
        android:text="Enter Information"/>


</LinearLayout>


