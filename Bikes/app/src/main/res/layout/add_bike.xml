<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the following information to add a bike into your inventory."
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:textStyle="bold"
        android:textColor="#ff2431ff"
        android:layout_gravity="top" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please enter the make of the bike." />

        <EditText
            android:id="@+id/addBikeMakeInput"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the serial number or code of the bike." />

        <EditText
            android:id="@+id/addBikeSerialInput"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please input the color of this bike." />

        <EditText
            android:id="@+id/addBikeColor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Please choose the condition of the bike." />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBikeCondition">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addBikeNew"
                android:text="New"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used"
                android:id="@+id/addBikeUsed"/>


        </RadioGroup>



    </LinearLayout>


    <Button
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addEnterButton"
        android:text="Enter Information"/>

</LinearLayout>

