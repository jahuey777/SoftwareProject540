<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="5">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddRepair"
        android:text="Add new repair"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Repairs"
        android:id="@+id/textView_Title_Reps"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#ff2431ff"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeleteRepair"
        android:text="Delete repair"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewActiveRepairs"
        android:text="View Active Repairs"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewPendingRepairs"
        android:text="View completed Repairs"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CompletedRepair"
        android:text="Completed a repair"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_gravity="center_horizontal" />

</GridLayout>